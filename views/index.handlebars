<section class="hero is-small is-light">
    <div class="hero-body">
        <nav class="navbar" role="navigation">
            <div class="navbar-brand has-icons-right">
                <h1 class="title is-3 navbar-item">My Family Daily</h1>
                <div class="navbar-item userBtn is-primary" user_id="{{user.user_id}}">Logged as: {{user.email}} </div>
                <div class="buttons">
                    <a class="control" href="/logout"><button class="button is-danger">Logout</button></a>
                </div>
            </div>
        </nav>
    </div>
</section>

<section>
    <div class="container has-text-justified">
        <div class="columns">
            <div class="column is-three-quarters">
                <article class="media addNewsContainer">
                    <figure class="media-left">
                        <p class="image is-64x64">
                            <img src="https://picsum.photos/128">
                        </p>
                    </figure>
                    <div class="media-content">
                        <form class="addNews">
                            <div class="field">
                                <p class="control">
                                    <textarea class="textarea" placeholder="What's up today?" id="content"></textarea>
                                </p>
                            </div>
                            <div class="field">
                                <p class="control">
                                    <button class="button newsBtn" type="submit">Post it!</button>
                                </p>
                            </div>
                        </form>
                    </div>

                </article>
                {{#each news }}
                <article class="media news" news-id="{{news_id}}" user-id="{{user_id}}">
                    <figure class="media-left">
                        <p class="image is-64x64">
                            <img src="https://picsum.photos/128">
                        </p>
                    </figure>
                    <div class="media-content">
                        <div class="content">
                            <p>
                                <strong>Written by: {{user_id}}</strong>
                                <br>
                                {{content}}
                                <br>
                                <small><a>Like</a> 路 <a>Reply</a> 路 created on:{{createdOn}}</small>
                            </p>
                        </div>
                        {{#each comments }}
                        <article class="media comment" comment-id="{{comment_id}}">
                            <figure class="media-left">
                                <p class="image is-48x48">
                                    <img src="https://picsum.photos/96">
                                </p>
                            </figure>
                            <div class="media-content">
                                <div class="content">
                                    <p>
                                        <strong>Comment by: {{user_id}}</strong>
                                        <br>
                                        {{content}}
                                        <br>
                                        <small><a>Like</a> 路 <a>Reply</a> 路 added on:{{createdOn}}</small>
                                    </p>
                                </div>
                            </div>
                        </article>
                        {{/each}}
                        <article class="media">
                            <figure class="media-left">
                                <p class="image is-64x64">
                                    <img src="https://picsum.photos/128">
                                </p>
                            </figure>
                            <div class="media-content">
                                <form class="addComment" news_id="{{news_id}}">
                                    <div class="field">
                                        <p class="control">
                                            <textarea class="textarea" placeholder="Add a comment..."
                                                id="content"></textarea>
                                        </p>
                                    </div>
                                    <div class="field">
                                        <p class="control">
                                            <button class="button commentBtn" type="submit">Post
                                                comment</button>
                                        </p>
                                    </div>
                                </form>
                            </div>
                        </article>
                    </div>

                </article>
                {{/each}}
            </div>
            <div class="column">
                <div class="tile is-ancestor">
                    <div class="tile is-vertical is-parent">
                        <div class="tile is-child box">
                            <p>Current time in ..city..</p>
                        </div>
                        <div class="tile is-child box">
                            <p>Current weather in ..city..</p>
                        </div>
                        <div class="tile is-child box">
                            <p>Invite your family!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript" src="/assets/js/loggeduser.js"></script>