<section>
    <div class="container has-text-justified">
        <div class="columns">
            <div class="column is-three-quarters">
                <p class="control has-text-centered">
                    <button class="button showAddNews">Write post</button>
                </p>
                <article class="media addNewsContainer">
                    <figure class="media-left">
                        <p class="image is-64x64">
                            <img src="https://picsum.photos/128">
                        </p>
                    </figure>
                    <div class="media-content">
                        <form class="addNews">
                            <div class="field">
                                <p class="control">
                                    <textarea class="textarea" placeholder="What's up today?" id="content"></textarea>
                                </p>
                            </div>
                            <div class="field">
                                <p class="control">
                                    <button class="button newsBtn" type="submit">Send</button>
                                </p>
                            </div>
                        </form>
                    </div>
                </article>
                {{#each news }}
                <article class="media news" news-id="{{news_id}}" user-id="{{user_id}}">
                    <figure class="media-left">
                        <p class="image is-64x64">
                            <img src="https://picsum.photos/128">
                        </p>
                    </figure>
                    <div class="media-content">
                        <div class="content">
                            <p>
                                <strong>Written by: {{email}}</strong>
                                <br>
                                {{content}}
                                <br>
                                created on: {{shortDate createdOn}}</small>
                            </p>
                        </div>
                        {{#each comments }}
                        <article class="media comment" comment-id="{{comment_id}}">
                            <figure class="media-left">
                                <p class="image is-48x48">
                                    <img src="https://picsum.photos/96">
                                </p>
                            </figure>
                            <div class="media-content">
                                <div class="content">
                                    <p>
                                        <strong>Comment by: {{email}}</strong>
                                        <br>
                                        {{content}}
                                        <br>
                                        added on: {{shortDate createdOn}}</small>
                                    </p>
                                </div>
                            </div>
                        </article>
                        {{/each}}
                        <article class="media">
                            <figure class="media-left">
                                <p class="image is-64x64">
                                    <img src="https://picsum.photos/128">
                                </p>
                            </figure>
                            <div class="media-content">
                                <form class="addComment" news_id="{{news_id}}">
                                    <div class="field">
                                        <p class="control">
                                            <textarea class="textarea" placeholder="Add a comment..."
                                                id="content"></textarea>
                                        </p>
                                    </div>
                                    <div class="field">
                                        <p class="control">
                                            <button class="button commentBtn" type="submit">Post comment</button>
                                        </p>
                                    </div>
                                </form>
                            </div>
                        </article>
                    </div>
                </article>
                {{/each}}
            </div>
            <div class="column has-text-centered">
                <div class="tile is-ancestor">
                    <div class="tile is-vertical is-parent">
                        <div class="tile is-child box time-box">
                            <p>Berlin</p>
                            <p id="time">........</p>
                        </div>
                        <div class="tile is-child box weather-box">
                            <p>Berlin</p>
                            <p id="weather">........</p>
                        </div>
                        <div class="tile is-child box">
                            <p class="button is-link is-inverted">Invite your family!</p>
                        </div>
                        <div class="tile is-child box" id="changePassword">
                            <a class="button is-danger is-inverted changePasswordBtn" href="/settings">Change
                                password</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript" src="/assets/js/loggeduser.js"></script>
<script type="text/javascript" src="/assets/js/weather_api.js"></script>
<script type="text/javascript" src="/assets/js/time_api.js"></script>